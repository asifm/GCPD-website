{
  "name": "patent-viz",
  "version": "1.0.0",
  "description": "Global Corporate Patent Data Visualization",
  "author": "asif",
  "private": true,
  "config": {
    "nuxt": {
      "host": "0.0.0.0",
      "port": "3000"
    }
  },
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "test": "jest || exit 0",
    "dev-debug": "node --inspect node_modules/nuxt/bin/nuxt"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "automock": false,
    "setupFiles": [
      "./setupJest.js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    }
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.0.0",
    "@types/d3-array": "^1.2.4",
    "@types/vue-select": "^2.4.0",
    "cross-env": "^5.2.0",
    "d3": "^5.7.0",
    "d3-array": "^2.0.0",
    "d3-tip": "^0.9.1",
    "lodash": "^4.17.11",
    "nuxt": "^2.0.0",
    "uikit": "^3.0.0-rc.19",
    "vue-apexcharts": "^1.2.1",
    "vue-select": "^2.5.1",
    "vuikit": "^0.8.10"
  },
  "devDependencies": {
    "@nuxtjs/markdownit": "^1.2.2",
    "@types/cypress": "^1.1.3",
    "@types/d3": "^5.0.1",
    "@types/eslint": "^4.16.4",
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/jest": "^23.3.9",
    "@types/node-fetch": "^2.1.2",
    "@types/node-sass": "^3.10.32",
    "@types/prettier": "^1.13.2",
    "@types/pug": "^2.0.4",
    "@types/uikit": "^2.27.6",
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "1.7.0",
    "cypress": "^3.1.0",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-vue": "^4.0.0",
    "file-loader": "^2.0.0",
    "jest": "^23.6.0",
    "jest-fetch-mock": "^1.6.6",
    "jest-vue-preprocessor": "^1.4.0",
    "markdown-it-attrs": "^2.3.2",
    "markdown-it-footnote": "^3.0.1",
    "node-fetch": "^2.2.0",
    "node-sass": "^4.9.4",
    "nodemon": "^1.11.0",
    "prettier": "1.14.3",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "sass-loader": "^7.1.0",
    "vue-jest": "^3.0.0",
    "wallaby-vue-compiler": "^1.0.3"
  }
}
